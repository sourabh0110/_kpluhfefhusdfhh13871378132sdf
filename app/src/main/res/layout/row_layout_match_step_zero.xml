<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/hil_llmain"
    android:background="@android:color/white"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/hil_ivStar"
        android:layout_width="0dp"
        android:paddingTop="10dp"
        android:src="@drawable/gray_star"
        android:paddingBottom="10dp"
        android:layout_weight="0.15"
        android:layout_height="50dp" />

    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/hil_tvTitle1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_weight="0.2"
        android:text="abc"
        android:gravity="right"
        android:layout_gravity="center_vertical"
        android:textColor="@android:color/black"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_weight="0.25"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/hil_tvTime"
            android:layout_gravity="center"
            android:text="12:00"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="4dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/hil_tvTitle2"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_weight="0.25"
        android:text="def"
        android:layout_gravity="center_vertical"
        android:gravity="left"
        android:textColor="@android:color/black"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/hil_tvType"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_weight="0.15"
        android:text="D2"
        android:background="@color/cell_color_1"
        android:textColor="@android:color/white"
        android:layout_width="0dp"
        android:layout_height="match_parent" />
</LinearLayout>