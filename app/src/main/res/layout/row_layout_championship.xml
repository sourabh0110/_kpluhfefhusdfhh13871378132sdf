<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <ImageView

        android:layout_alignParentLeft="true"
        android:src="@mipmap/ic_launcher"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/first_team_logo_championships"
        android:scaleType="fitXY"
        />
    <ImageView
        android:layout_width="2dp"
        android:layout_height="2dp"
        android:id="@+id/image_static_championships"
        />
    <TextView

        android:layout_marginLeft="15dp"
        android:layout_width="100dp"
        android:layout_toRightOf="@+id/first_team_logo_championships"
        android:layout_height="75dp"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="15dp"
        android:text="sample"
        android:textAllCaps="true"
        android:id="@+id/second_team_name_championships"
        />

    <TextView

        android:layout_marginLeft="15dp"
        android:layout_width="100dp"
        android:layout_toRightOf="@+id/second_team_name_championships"
        android:layout_height="75dp"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="15dp"
        android:text="sample"
        android:textAllCaps="true"
        android:id="@+id/third_team_code_championships"
        />

</LinearLayout>