<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_step_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="companyname.com.kpl.admin_files.StepTwo">

    <LinearLayout
        android:id="@+id/css_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/textColorPrimary">

        <Button
            android:id="@+id/css_btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/headr"
            android:text="Save"
            android:textColor="@color/textColorPrimary" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/table_cell"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/css_ivLeft"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:padding="10dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/css_tvLname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.15"
                android:gravity="left"
                android:text="abc"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Division One"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/css_tvTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/headr"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="8:00"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/css_tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="07/01/2017"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="13sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/css_tvRname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.15"
                android:gravity="right"
                android:text="def"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/css_ivRight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:padding="10dp"
                android:src="@mipmap/ic_launcher" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@color/crew_bg"
                android:gravity="center"
                android:padding="10dp"
                android:text="abc"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@color/btn_back"
                android:gravity="center"
                android:padding="10dp"
                android:text="def"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:background="@color/headr"
                android:padding="5dp"
                android:text="Name"
                android:textColor="@color/textColorPrimary"
                android:textSize="11dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:background="@color/table_cell"
                android:padding="5dp"
                android:text="G"
                android:textColor="@color/headr"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:background="@color/btn_back"
                android:padding="5dp"
                android:text="OG"
                android:textColor="@color/headr"
                android:textSize="11dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:background="@color/table_cell"
                android:padding="5dp"
                android:text="A"
                android:textColor="@color/headr"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:background="@color/btn_back"
                android:padding="5dp"
                android:text="CLS"
                android:textColor="@color/headr"
                android:textSize="11dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:background="@color/table_cell"
                android:padding="5dp"
                android:text="Y"
                android:textColor="@color/headr"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:background="@color/btn_back"
                android:padding="5dp"
                android:text="R"
                android:textColor="@color/headr"
                android:textSize="12dp"
                android:textStyle="bold" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/css_rvEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:overScrollMode="never">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>


</RelativeLayout>
