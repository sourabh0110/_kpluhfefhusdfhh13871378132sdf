<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    >
        <ImageView

            android:layout_alignParentLeft="true"
            android:src="@mipmap/ic_launcher"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/first_team_logo"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:id="@+id/image_static"
            />
        <TextView

            android:layout_marginLeft="170dp"
            android:layout_width="100dp"
            android:layout_toRightOf="@+id/first_team_logo"
            android:layout_height="100dp"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="15dp"
            android:text="sample"
            android:textAllCaps="true"
            android:id="@+id/second_team_name"
            />

    <TextView

        android:layout_marginLeft="15dp"
        android:layout_width="100dp"
        android:layout_toRightOf="@+id/second_team_name"
        android:layout_height="75dp"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="15dp"
        android:text="sample"
        android:textAllCaps="true"
        android:id="@+id/third_team_code"
        android:visibility="invisible"
        />

</android.support.v7.widget.CardView>