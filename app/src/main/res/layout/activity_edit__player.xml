<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add__player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="companyname.com.kpl.admin_files.Edit_Player">

    <ScrollView
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="match_parent"
        android:background="#ffffff"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border"
                android:id="@+id/ll_edit_player_2"
                android:layout_marginTop="50dp"
                android:gravity="center"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:contextClickable="true"
                    android:background="@drawable/border"
                    android:id="@+id/civ_edit_player"
                    />
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOB"
                    android:textSize="20dp"
                    android:id="@+id/tv_show_date_edit"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Date"
                    android:id="@+id/btn_select_date_edit"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:background="@drawable/border"
                android:id="@+id/ll_edit_player_3"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/ll_edit_player_2"

                >


                <EditText
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter First Name"
                    android:background="@drawable/border"
                    android:textSize="20dp"
                    />
                <EditText
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Last Name"
                    android:background="@drawable/border"
                    android:textSize="20dp"
                    />
                <ListView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:textSize="20dp"
                    />
                <EditText
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/border"
                    android:layout_height="wrap_content"
                    android:hint="Enter Contact No"
                    android:textSize="20dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/ll_edit_player_3"
                >
                <Button
                    android:layout_marginLeft="20dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="edit"
                    android:backgroundTint="@color/colorPrimary"
                    android:id="@+id/btn_edit_player"
                    android:textColor="#ffffff"
                    android:background="@drawable/circle"
                    />

                <Button
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/circle"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="DELETE"
                    android:backgroundTint="@color/colorPrimary"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:src="@drawable/kpllogo"
                    android:layout_toRightOf="@+id/btn_edit_player"
                    android:id="@+id/btn_del_player"
                    />

                <Button
                    android:layout_toStartOf="@+id/btn_edit_player"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/circle"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="Update"
                    android:backgroundTint="@color/colorPrimary"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:src="@drawable/kpllogo"
                    android:layout_toRightOf="@+id/btn_edit_player"
                    android:id="@+id/btn_update_player"

                    />

            </LinearLayout>



        </RelativeLayout>





    </ScrollView>


</RelativeLayout>
