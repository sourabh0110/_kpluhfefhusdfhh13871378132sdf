<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="companyname.com.kpl.admin_files.Select_team">
    <ScrollView
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_marginBottom="50dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white">


            <TextView
                android:drawableLeft="@android:drawable/ic_dialog_info"
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:textColor="@android:color/white"
                android:text="Premier League"
                android:textAlignment="center"
                android:background="#000000"
                android:gravity="center"
                android:textSize="15dp"
                android:padding="10dp"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_pl"
                >

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:drawableLeft="@android:drawable/ic_dialog_info"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:text="The Championships"
                android:gravity="center"
                android:background="#000000"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textSize="15dp"
                android:padding="10dp"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_championships"
                >

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:drawableLeft="@android:drawable/ic_dialog_info"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:text="Division 1"
                android:textSize="15dp"
                android:padding="10dp"
                android:background="#000000"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_div1"
                >

            </android.support.v7.widget.RecyclerView>


            <TextView
                android:drawableLeft="@android:drawable/ic_dialog_info"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:text="Division 2"
                android:textSize="15dp"
                android:padding="10dp"
                android:background="#000000"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:gravity="center"

                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_div2"
                >

            </android.support.v7.widget.RecyclerView>


            <TextView
                android:drawableLeft="@android:drawable/ic_dialog_info"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:text="Super Cup"
                android:textSize="15dp"
                android:padding="10dp"
                android:background="#000000"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_supercup"
                >

            </android.support.v7.widget.RecyclerView>


            <TextView
                android:drawableLeft="@android:drawable/ic_dialog_info"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:text="Federal Shield"
                android:textSize="15dp"
                android:padding="10dp"
                android:background="#000000"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_fedshield"
                >

            </android.support.v7.widget.RecyclerView>


            <TextView
                android:drawableLeft="@android:drawable/ic_dialog_info"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:text="Kings Cup"
                android:textSize="15dp"
                android:padding="10dp"
                android:background="#000000"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_kingscup"
                >

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>

<include
    layout="@layout/activity_footer_admin"
    />
</RelativeLayout>
