<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_news"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="companyname.com.kpl.admin_files.Edit_news">
    <ScrollView
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="match_parent"
        android:background="#ffffff"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/border"
                android:layout_marginTop="10dp"
                android:id="@+id/ll_add_news_1"
                >


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_media_previous"
                    android:id="@+id/btn_back"
                    android:textColor="#ffffff"
                    android:text="Back"
                    android:drawableLeft="@android:drawable/ic_media_previous"
                    android:backgroundTint="@android:color/black"
                    />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit News"
                android:textIsSelectable="false"
                android:textStyle="bold"
                android:textSize="22dp"
                android:id="@+id/tv_label_edit_news"
                android:layout_marginTop="80dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="120dp"
                android:id="@+id/ll_editnews_1"
                android:orientation="horizontal"
                >



                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_label_edit_news"
                    android:id="@+id/tv_author"
                    android:hint="Author"
                    android:background="@drawable/border"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_date"
                    android:layout_below="@+id/tv_label_edit_news"
                    android:hint="Date"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/border"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:id="@+id/ll_editnews_2"
                android:layout_below="@+id/ll_editnews_1"
                android:orientation="horizontal"
                android:background="@drawable/border"
                >


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:background="@drawable/border"
                    android:id="@+id/edit_upload"
                    />

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_input_add"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_alignEnd="@+id/tv_label_edit_news"
                    android:id="@+id/edit_upload_button"
                    android:background="#000000"
                    android:layout_weight="1" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_editnews_3"
                android:layout_below="@+id/ll_editnews_2"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border"
                >

                <TextView
                    android:layout_marginTop="20dp"
                    android:background="@drawable/border"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="Title"
                    android:id="@+id/et_title"
                    ></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description"
                    android:background="@drawable/border"
                    android:id="@+id/et_description"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:hint="Content"
                    android:isScrollContainer="true"
                    android:background="@drawable/border"
                    android:id="@+id/et_content"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_editnews_3"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:id="@+id/btn_update"
                    android:background="#000000"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="10dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:id="@+id/btn_delete"
                    android:background="#000000"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="10dp"
                    />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
