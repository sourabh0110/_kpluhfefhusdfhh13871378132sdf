<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <ImageView

        android:layout_alignParentLeft="true"
        android:src="@mipmap/ic_launcher"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/iv_player_image"
        android:scaleType="fitXY"
        />
    <ImageView
        android:layout_width="2dp"
        android:layout_height="2dp"
        android:id="@+id/image_static_player"
        />
    <TextView

        android:layout_marginLeft="15dp"
        android:layout_width="100dp"
        android:layout_toRightOf="@+id/iv_player_image"
        android:layout_height="75dp"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="15dp"
        android:text="Name"
        android:textAllCaps="true"
        android:id="@+id/tv_player_name"
        />

    <TextView

        android:layout_marginLeft="15dp"
        android:layout_width="100dp"
        android:layout_toRightOf="@+id/tv_player_name"
        android:layout_height="75dp"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="15dp"
        android:text="Team Name"
        android:textAllCaps="true"
        android:id="@+id/tv_player_team_name"
        />
    <TextView

        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_player_team_code"
        />
    <TextView

        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_player_mobile_no"
        />
    <TextView

        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_player_team_bdate"
        />

</LinearLayout>