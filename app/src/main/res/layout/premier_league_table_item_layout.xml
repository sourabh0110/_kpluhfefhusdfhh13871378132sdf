<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lil_tvIndex"
        android:layout_weight="0.05"
        android:text="1"
        android:textColor="@android:color/black"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/lil_ivArrow"
        android:layout_weight="0.03"
        android:src="@drawable/img_up_arrow"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/lil_ivLogo"
        android:src="@drawable/img_white_tiger"
        android:padding="2dp"
        android:layout_weight="0.08"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/lil_tvName"
        android:textColor="@android:color/black"
        android:text="White Tigers"
        android:layout_weight="0.25"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lil_tv_p"
        android:text="11"
        android:layout_weight="0.09"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lil_tv_gd"
        android:text="8"
        android:layout_weight="0.09"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/lil_tv_pts"
        android:text="1"
        android:layout_weight="0.09"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:text="2"
        android:layout_weight="0.09"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:text="25"
        android:layout_weight="0.09"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

</LinearLayout>